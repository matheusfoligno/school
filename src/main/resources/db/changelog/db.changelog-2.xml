                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="Matheus" id="db.changelog-2" dbms="">

		<preConditions onFail="CONTINUE"
			onFailMessage="Tabela 'classroom' jÃ¡ existe">
